\renewcommand{\theparagraph}{%
  \ifnum\value{subsection}=0
    \thesection
  \else
    \ifnum\value{subsubsection}=0
      \thesubsection
    \else
      \thesubsubsection
    \fi
  \fi
  .\arabic{paragraph}}
